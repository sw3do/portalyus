---
import Layout from "../layouts/Layout.astro";
import MusicFile from "../assets/music.mp3";
import PhotoTakla from "../assets/takla.jpg";
---

<Layout title="404 - Sayfa Bulunamadı | Portalyus">
  <main class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-red-900 to-orange-900"></div>
    
    <div class="absolute inset-0 opacity-30" style={{
      backgroundImage: "url('data:image/svg+xml,%3Csvg width=%2280%22 height=%2280%22 viewBox=%220 0 80 80%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ff6b35%22 fill-opacity=%220.1%22%3E%3Cpolygon points=%2240,0 80,40 40,80 0,40%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"
    }}></div>

    <div class="absolute top-10 left-10 w-20 h-20 bg-gradient-to-br from-orange-500 to-red-500 rounded-lg opacity-20 animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full opacity-20 animate-bounce"></div>
    <div class="absolute top-1/2 left-20 w-12 h-12 bg-gradient-to-br from-yellow-500 to-orange-500 transform rotate-45 opacity-15 animate-spin"></div>
    <div class="absolute top-20 right-20 w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full opacity-20 animate-ping"></div>

    <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
      <div class="animate-fade-in-up">
        <div class="mb-8">
          <h1 class="text-8xl sm:text-9xl md:text-[12rem] font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 via-red-400 to-yellow-400 mb-4 tracking-tight drop-shadow-2xl animate-pulse">
            404
          </h1>
        </div>
        
        <div class="mb-8">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-6">
            🎮 Sayfa Bulunamadı!
          </h2>
          <p class="text-lg sm:text-xl text-gray-300 mb-8 leading-relaxed">
            Aradığınız sayfa mevcut değil veya taşınmış olabilir.
          </p>
        </div>

        <div class="bg-gradient-to-r from-gray-800/50 to-gray-700/50 backdrop-blur-sm rounded-2xl p-6 sm:p-8 mb-8 border border-gray-600/30">
          <div class="text-yellow-400 text-4xl mb-4">🎭</div>
          <p class="text-base sm:text-lg text-gray-200 leading-relaxed italic font-medium">
            "Taklacı taklacıya taklası varmış, taklacı taklacıdan taklasını istemiş, taklacı taklacıya taklasını vermeyince taklacı taklacıyı takkklaaya getirmiş"
          </p>
        </div>

        <div class="mb-8 flex justify-center">
          <div class="relative group">
            <img 
              src={PhotoTakla.src}
              alt="404 Meme" 
              class="w-48 h-48 object-cover rounded-xl border-4 border-orange-500/30 shadow-2xl transform group-hover:scale-105 transition-all duration-300 group-hover:rotate-2"
            />
            <div class="absolute -top-2 -right-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full animate-bounce">
              😤
            </div>
            <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-sm px-3 py-1 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity">
              Beni bulan yok!
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="/"
            class="group inline-flex items-center bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-700 hover:to-red-700 text-white font-semibold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl shadow-orange-500/25"
          >
            <svg class="mr-2 w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span>🏠 Ana Sayfaya Dön</span>
          </a>
          
          <a
            href="/videolar"
            class="inline-flex items-center bg-gradient-to-r from-blue-600/20 to-cyan-600/20 backdrop-blur-sm hover:from-blue-600/30 hover:to-cyan-600/30 text-white font-semibold py-4 px-8 rounded-full transition-all duration-300 border border-blue-400/30 hover:border-blue-400/50"
          >
            🎬 Videoları Keşfet
          </a>
        </div>

        <div class="mt-12">
          <div class="flex justify-center space-x-4 text-gray-400">
            <div class="w-2 h-2 bg-orange-500 rounded-full animate-bounce" style="animation-delay: 0s"></div>
            <div class="w-2 h-2 bg-red-500 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
            <div class="w-2 h-2 bg-yellow-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-black/50 to-transparent"></div>
    
    <audio id="backgroundMusic" loop>
      <source src={MusicFile} type="audio/mpeg">
    </audio>
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const audio = document.getElementById('backgroundMusic') as HTMLAudioElement;
        if (audio) {
          audio.volume = 0.25;
          
          const playAudio = () => {
            audio.play().catch(e => console.log('Audio play failed:', e));
            document.removeEventListener('click', playAudio);
            document.removeEventListener('keydown', playAudio);
            document.removeEventListener('touchstart', playAudio);
          };
          
          document.addEventListener('click', playAudio);
          document.addEventListener('keydown', playAudio);
          document.addEventListener('touchstart', playAudio);
          
          audio.play().catch(() => {
            console.log('Autoplay blocked, waiting for user interaction');
          });
        }
      });
    </script>
  </main>
</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>