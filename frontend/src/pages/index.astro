---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.tsx";
import VideoCard from "../components/VideoCard.tsx";
import { getApiUrl } from "../config/env";
import type { Video, Category, ApiResponse } from "../types/index";

let featuredVideos: Video[] = [];
let recentVideos: Video[] = [];
let categories: Category[] = [];

try {
  const [featuredRes, recentRes, categoriesRes] = await Promise.all([
    fetch(getApiUrl("/videos/featured")),
    fetch(getApiUrl("/videos?limit=12")),
    fetch(getApiUrl("/categories")),
  ]);

  const featuredData: ApiResponse<Video[]> = await featuredRes.json();
  const recentData: ApiResponse<Video[]> = await recentRes.json();
  const categoriesData: ApiResponse<Category[]> = await categoriesRes.json();

  if (featuredData.success) featuredVideos = featuredData.data;
  if (recentData.success) recentVideos = recentData.data;
  if (categoriesData.success) categories = categoriesData.data;
} catch (error) {
  console.error("Error fetching data:", error);
}
---

<Layout title="Portalyus - Taklaking Video Platformu">
  <Navigation client:idle />

  <main class="min-h-screen">
    <!-- Hero Section -->
    <section
      class="relative bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 py-24 overflow-hidden"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-black/20"></div>
      <div
        class="absolute inset-0 opacity-40"
        style={{
          backgroundImage:
            "url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%220.05%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%222%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')",
        }}
      >
      </div>

      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-fade-in-up">
          <h1
            class="text-6xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white via-blue-100 to-purple-200 mb-6 tracking-tight"
          >
            Portalyus
          </h1>
          <p
            class="text-xl md:text-2xl text-gray-100 mb-8 max-w-4xl mx-auto leading-relaxed font-light"
          >
            Taklaking ve ekibinin en iyi video içeriklerini keşfedin
          </p>
          <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center"
          >
            <a
              href="#featured"
              class="group inline-flex items-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
            >
              <span>Videoları Keşfet</span>
              <svg
                class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a
              href="#categories"
              class="inline-flex items-center bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white font-semibold py-4 px-8 rounded-full transition-all duration-300 border border-white/20 hover:border-white/40"
            >
              Kategorileri Gör
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Videos -->
    {
      featuredVideos.length > 0 && (
        <section
          id="featured"
          class="py-20 bg-gradient-to-b from-gray-900 to-gray-800"
        >
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 mb-4">
                Öne Çıkan Videolar
              </h2>
              <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                En popüler ve özenle seçilmiş video içeriklerimizi keşfedin
              </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
              {featuredVideos.map((video: Video) => (
                <VideoCard video={video} client:idle />
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Categories -->
    {
      categories.length > 0 && (
        <section
          id="categories"
          class="py-20 bg-gradient-to-b from-gray-800 to-gray-900 relative"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-blue-900/10 to-purple-900/10" />
          <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 mb-4">
                Kategoriler
              </h2>
              <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                İlgi alanınıza göre video kategorilerini keşfedin
              </p>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-6">
              {categories.map((category: Category) => (
                <a
                  href={`/kategori/${category.slug}`}
                  class="group relative bg-gradient-to-br from-gray-700 to-gray-800 hover:from-blue-600 hover:to-purple-600 rounded-xl p-6 text-center transition-all duration-300 transform hover:scale-105 hover:shadow-2xl border border-gray-600 hover:border-transparent"
                >
                  <div class="absolute inset-0 bg-gradient-to-br from-blue-600/0 to-purple-600/0 group-hover:from-blue-600/20 group-hover:to-purple-600/20 rounded-xl transition-all duration-300" />
                  <div class="relative">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                      <svg
                        class="w-6 h-6 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                        />
                      </svg>
                    </div>
                    <h3 class="text-white font-semibold group-hover:text-blue-100 transition-colors text-sm">
                      {category.name}
                    </h3>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Recent Videos -->
    {
      recentVideos.length > 0 && (
        <section class="py-20 bg-gradient-to-b from-gray-900 to-black">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
              <h2 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-400 mb-4">
                Son Videolar
              </h2>
              <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                En yeni yüklenen video içeriklerimizi kaçırmayın
              </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
              {recentVideos.map((video: Video) => (
                <VideoCard video={video} client:idle />
              ))}
            </div>
            <div class="text-center mt-16">
              <a
                href="/videolar"
                class="group inline-flex items-center bg-gradient-to-r from-green-600 to-blue-600 hover:from-green-700 hover:to-blue-700 text-white font-semibold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
              >
                <span>Tüm Videoları Gör</span>
                <svg
                  class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"
                  />
                </svg>
              </a>
            </div>
          </div>
        </section>
      )
    }
  </main>

  <!-- Footer -->
  <footer
    class="bg-gradient-to-r from-gray-900 to-black py-12 border-t border-gray-800"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h3
          class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 mb-4"
        >
          Portalyus
        </h3>
        <p class="text-gray-400 mb-6 max-w-md mx-auto">
          Taklaking ve ekibinin en kaliteli video içeriklerini keşfetmek için
          doğru yerdesiniz.
        </p>
        <div class="border-t border-gray-800 pt-6">
          <p class="text-gray-500 text-sm">
            © 2024 Portalyus - Taklaking Video Platformu. Tüm hakları saklıdır.
          </p>
        </div>
      </div>
    </div>
  </footer>
</Layout>
