---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.tsx';
import VideoCard from '../../components/VideoCard.tsx';
import { getApiUrl } from '../../config/env';

export const prerender = true;

export async function getStaticPaths() {
  try {
    const response = await fetch(getApiUrl('/categories'));
    const data = await response.json();
    
    if (data.success) {
      return data.data.map((category: any) => ({
        params: { slug: category.slug }
      }));
    }
  } catch (error) {
    console.error('Error fetching categories for static paths:', error);
  }
  
  return [];
}

const { slug } = Astro.params;

let category = null;
let videos = [];
let error = null;

try {
  const [categoryRes, videosRes] = await Promise.all([
    fetch(getApiUrl(`/categories/${slug}`)),
    fetch(getApiUrl(`/categories/${slug}/videos`))
  ]);
  
  const categoryData = await categoryRes.json();
  const videosData = await videosRes.json();
  
  if (categoryData.success) {
    category = categoryData.data;
  } else {
    error = categoryData.message || 'Kategori bulunamadı';
  }
  
  if (videosData.success) {
    videos = videosData.data;
  }
} catch (err) {
  error = 'Kategori yüklenirken bir hata oluştu';
  console.error('Error fetching category:', err);
}

if (!category) {
  return Astro.redirect('/404');
}
---

<Layout title={`${category.name} - Portalyus`} description={`${category.name} kategorisindeki tüm videoları izleyin`}>
  <Navigation client:load />
  
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Category Header -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 mb-8 shadow-2xl border border-gray-700">
        <div class="flex items-center space-x-4 mb-6">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-200 leading-tight">
              {category.name}
            </h1>
            <div class="flex items-center space-x-2 mt-2">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <p class="text-gray-400 text-lg font-medium">
                {videos.length} video bulundu
              </p>
            </div>
          </div>
        </div>
      </div>
    
      <!-- Videos Grid -->
      {videos.length > 0 ? (
        <div>
          <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 mb-8 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Tüm Videolar
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {videos.map((video: any) => (
              <VideoCard video={video} client:load />
            ))}
          </div>
        </div>
      ) : (
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-12 text-center shadow-2xl border border-gray-700">
          <div class="flex flex-col items-center space-y-6">
            <div class="w-24 h-24 bg-gradient-to-br from-blue-600/20 to-purple-600/20 rounded-full flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <div class="text-center">
              <h3 class="text-2xl font-bold text-white mb-2">Bu kategoride video yok</h3>
              <p class="text-gray-400 text-lg mb-2">Bu kategoride henüz video bulunmuyor.</p>
              <p class="text-gray-500">Yakında yeni videolar eklenecek!</p>
            </div>
            <a href="/" class="inline-flex items-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-6 py-3 rounded-full transition-all duration-300 transform hover:scale-105 font-semibold">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Ana Sayfaya Dön
            </a>
          </div>
        </div>
      )}
    </div>
  </main>
  
  <!-- Footer -->
  <footer class="bg-gray-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">
        © 2024 Portalyus - Taklaking Video Platformu. Tüm hakları saklıdır.
      </p>
    </div>
  </footer>
</Layout>