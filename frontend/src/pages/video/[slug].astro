---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.tsx';
import VideoPlayer from '../../components/VideoPlayer.tsx';
import { getApiUrl, getUploadsUrl } from '../../config/env';
import type { Video, ApiResponse } from '../../types/index';

const { slug } = Astro.params;

let video: Video | null = null;

try {
  const response = await fetch(getApiUrl(`/videos/${slug}`));
  const data: ApiResponse<Video> = await response.json();
  
  if (data.success) {
    video = data.data;
  }
} catch (err) {
  console.error('Error fetching video:', err);
}

if (!video) {
  return Astro.redirect('/404');
}

let relatedVideos: Video[] = [];

try {
  if (video) {
    const relatedRes = await fetch(getApiUrl(`/categories/${video.category_slug}/videos`));
    const relatedData: ApiResponse<Video[]> = await relatedRes.json();
    
    if (relatedData.success) {
      relatedVideos = relatedData.data.filter((v: Video) => v.id !== video.id).slice(0, 8);
    }
  }
} catch (err) {
  console.error('Error fetching related videos:', err);
}

if (!video) {
  return Astro.redirect('/404');
}

const formatDate = (dateString: string): string => {
  const date = new Date(dateString);
  return date.toLocaleDateString('tr-TR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const formatViewCount = (count: number | undefined): string => {
  if (!count && count !== 0) return '0';
  if (count >= 1000000) {
    return `${(count / 1000000).toFixed(1)}M`;
  } else if (count >= 1000) {
    return `${(count / 1000).toFixed(1)}K`;
  }
  return count.toString();
};

let viewCounted = false;
---

<Layout title={`${video.title} - Portalyus`} description={video.description}>
  <Navigation client:load />
  
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Video Player and Info -->
        <div class="lg:col-span-2">
          <!-- Video Player -->
          <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl overflow-hidden mb-6 shadow-2xl border border-gray-700">
            <div class="aspect-video relative">
              <VideoPlayer
                client:only
                src={getUploadsUrl(`/videos/${video.video_file}`)}
                poster={video.thumbnail ? getUploadsUrl(`/${video.thumbnail.startsWith('thumbnails/') ? video.thumbnail : `thumbnails/${video.thumbnail}`}`) : undefined}
                title={video.title}
                className="w-full h-full rounded-t-2xl"
                onPlay={() => {
                  if (!viewCounted) {
                    viewCounted = true;
                  }
                }}
              />
            </div>
          </div>
          
          <!-- Video Info -->
          <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 shadow-2xl border border-gray-700">
            <h1 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-200 mb-6 leading-tight">
              {video.title}
            </h1>
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
              <div class="flex items-center space-x-4 mb-4 sm:mb-0">
                <a href={`/kanal/${video.channel_slug}`} class="group flex items-center space-x-4 hover:text-blue-400 transition-all duration-300">
                  {video.channel_profile_image ? (
                    <img
                      src={getUploadsUrl(`/channels/${video.channel_profile_image}`)}
                      alt={video.channel_name}
                      class="w-14 h-14 rounded-full ring-4 ring-gray-600 group-hover:ring-blue-400 transition-all duration-300"
                    />
                  ) : (
                    <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center ring-4 ring-gray-600 group-hover:ring-blue-400 transition-all duration-300">
                      <span class="text-xl text-white font-bold">{video.channel_name.charAt(0)}</span>
                    </div>
                  )}
                  <div>
                    <h3 class="text-white font-semibold text-lg group-hover:text-blue-400 transition-colors">{video.channel_name}</h3>
                    <p class="text-gray-400 text-sm">Kanal Sahibi</p>
                  </div>
                </a>
              </div>
              
              <div class="flex items-center space-x-6 text-gray-400">
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  <span class="font-medium">{formatViewCount(video.view_count)} görüntüleme</span>
                </div>
                <span class="text-gray-600">•</span>
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="font-medium">{formatDate(video.created_at)}</span>
                </div>
              </div>
            </div>
            
            <div class="flex items-center space-x-4 mb-8">
              <a 
                href={`/kategori/${video.category_slug}`}
                class="inline-flex items-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-6 py-3 rounded-full transition-all duration-300 transform hover:scale-105 font-semibold"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                {video.category_name}
              </a>
              {video.is_featured && (
                <span class="inline-flex items-center bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-4 py-2 rounded-full text-sm font-semibold">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  Öne Çıkan
                </span>
              )}
            </div>
            
            {video.description && (
              <div class="border-t border-gray-700 pt-8">
                <h4 class="text-xl font-bold text-white mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  Açıklama
                </h4>
                <div class="bg-gray-700/50 rounded-xl p-6">
                  <p class="text-gray-300 whitespace-pre-wrap leading-relaxed">
                    {video.description}
                  </p>
                </div>
              </div>
            )}
          </div>
        </div>
        
        <!-- Related Videos Sidebar -->
        <div class="lg:col-span-1">
          {relatedVideos.length > 0 && (
            <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 shadow-2xl border border-gray-700">
              <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 mb-6 flex items-center">
                <svg class="w-6 h-6 mr-2 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
                İlgili Videolar
              </h3>
              <div class="space-y-4">
                {relatedVideos.map((relatedVideo: Video) => (
                  <div class="group flex space-x-3 p-3 rounded-xl hover:bg-gray-700/50 transition-all duration-300">
                    <a href={`/video/${relatedVideo.slug}`} class="flex-shrink-0">
                      <div class="w-32 h-18 bg-gradient-to-br from-gray-700 to-gray-800 rounded-lg overflow-hidden relative">
                        {relatedVideo.thumbnail ? (
                          <img
                            src={getUploadsUrl(`/${relatedVideo.thumbnail.startsWith('thumbnails/') ? relatedVideo.thumbnail : `thumbnails/${relatedVideo.thumbnail}`}`)}
                            alt={relatedVideo.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          />
                        ) : (
                          <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-blue-600/20 to-purple-600/20">
                            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                          </div>
                        )}
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
                          <svg class="w-6 h-6 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                        </div>
                      </div>
                    </a>
                    <div class="flex-1 min-w-0">
                      <a href={`/video/${relatedVideo.slug}`}>
                        <h4 class="text-white text-sm font-semibold line-clamp-2 hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-blue-400 hover:to-purple-400 transition-all duration-300 mb-2 leading-tight">
                          {relatedVideo.title}
                        </h4>
                      </a>
                      <p class="text-gray-400 text-xs mb-1 font-medium">{relatedVideo.channel_name}</p>
                      <div class="flex items-center space-x-1 text-gray-500 text-xs">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span>{formatViewCount(relatedVideo.view_count)} görüntüleme</span>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </main>
  
  <!-- Footer -->
  <footer class="bg-gray-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">
        © 2024 Portalyus - Taklaking Video Platformu. Tüm hakları saklıdır.
      </p>
    </div>
  </footer>
</Layout>